{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaVersion": 8
    },
    "extends": ["eslint:recommended", "prettier"],
    "ignorePatterns": ["dist", "node_modules", "bin"],
    "rules":{
        "no-constant-condition": ["error", { "checkLoops": false }]
    }
}